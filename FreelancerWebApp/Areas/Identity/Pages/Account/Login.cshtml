<header class="py-5" style="background-color:#285238;">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center">
            <div class="col-lg-8 col-xl-7 col-xxl-6">
            <div class="my-5 text-center text-xl-start">
                    <br />
                    <br />
                    <br />
                   
                <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                    Welcome to the <br />
                        <span style="color: #ffbb33 ">Freelancer.com</span>
                </h1>
                <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
                    Log In from here. And find the best freelancer here for perfect work.
                </p>
                <br />
                <br />
                <br />
                <br />
                <br />
                    <br />
                    
            </div>
            </div>
            <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center">
                @*
                <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>*@

                <div class="card" style="background-color:rgba(255, 255, 255, 0.20);">
                    <div class="card-body px-4 py-5 px-md-5">
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-outline mb-4">
                                <input asp-for="Input.Email" class="form-control text-light text-opacity-50" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email" class="form-label text-light text-opacity-50"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <input asp-for="Input.Password" class="form-control text-light text-opacity-50" autocomplete="current-password" aria-required="true" />
                                <label asp-for="Input.Password" class="form-label text-light text-opacity-50"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="checkbox col-sm-4">
                                    <label asp-for="Input.RememberMe" class="form-label text-opacity-50 text-light">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                                <div class="col-sm-8"></div>
                            </div>

                            <div class="row">
                                <div class="col-sm-9"></div>
                                <div class="col-sm-3">
                                    <button id="login-submit" type="submit" class="w-100 btn btn-md btn-primary">Log in</button>
                                </div>
                            </div>

                            @*<div class="row">
                                <div class="col-sm-7"></div>
                                <div class="col-sm-5">
                                    <p>
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                    </p>
                                </div>
                            </div>*@

                            @*<div>
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                <p>
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                </p>
                            </div>*@
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
