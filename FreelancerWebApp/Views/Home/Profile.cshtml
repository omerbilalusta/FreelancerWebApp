                                            <h5 class="text-light">@Html.DisplayFor(modelItem => item.Job_Title) ~ @Html.DisplayFor(modelItem => item.Job_Category)</h5>
                                            <p class="card-text text-light ">@Html.DisplayFor(modelItem => item.Job_Description)</p>
