@*@model FreelancerWebApp.Models.job*@

@{
    ViewData["Title"] = "Deliver";
}

@model JobViewModel
<div class="container py-4">
    <div class="likecontainer bg-light">
        <div class="p-5 mb-4">
            <div class="container-fluid py-5">
                <form asp-action="UploadDone" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-sm-2">
                            @*<label asp-for="Job_Title" class="control-label"></label>*@
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Job_Title" class="form-control" placeholder="Type Job Title" hidden/>
                            <span asp-validation-for="Job_Title" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4"></div>
                        <div class="col-sm-2">
                            @*<label asp-for="Job_Category" class="control-label"></label>*@
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Job_Category" class="form-control" placeholder="Type Job Category(Software, Text, Graphic Design)" hidden/>
                            <span asp-validation-for="Job_Category" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4"></div>
                        <div class="col-sm-2">
                            @*<label asp-for="Job_Description" class="control-label"></label>*@
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Job_Description" class="form-control" placeholder="Explain Job, Type Something about it" hidden/>
                            <span asp-validation-for="Job_Description" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4"></div>
                        <div class="col-sm-2">
                            @*<label asp-for="Offered_Price" class="control-label"></label>*@
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Offered_Price" class="form-control" placeholder="Enter Reward for the job" hidden/>
                            <span asp-validation-for="Offered_Price" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4"></div>
                        <div class="col-sm-2">
                            @*<label asp-for="Day" class="control-label"></label>*@
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Day" class="form-control" placeholder="Enter Limit Day(Type as a day)" hidden/>
                            <span asp-validation-for="Day" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4"></div>
                        <div class="col-sm-2">
                            @*<label asp-for="Owner_ID" class="control-label"></label>*@
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Owner_ID" class="form-control" placeholder="Owner_ID" hidden />
                            <span asp-validation-for="Owner_ID" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4"></div>
                        <div class="col-sm-2">
                            @*<label asp-for="Freelancer_ID" class="control-label"></label>*@
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Freelancer_ID" class="form-control" placeholder="Freelancer_ID" hidden />
                            <span asp-validation-for="Freelancer_ID" class="text-danger"></span>
                        </div>
                        <div class="col-sm-2">
                            @*<label asp-for="Freelancer_ID" class="control-label"></label>*@
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Job_Photo_Path" class="form-control" placeholder="Job_Photo_Path" hidden />
                            <span asp-validation-for="Job_Photo_Path" class="text-danger"></span>
                        </div>

                        <div class="col-sm-2">
                            @*<label asp-for="Freelancer_ID" class="control-label"></label>*@
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Confirmed" class="form-control" placeholder="Confirmed" hidden />
                            <span asp-validation-for="Confirmed" class="text-danger"></span>
                        </div>


                        <div class="col-sm-4"></div>
                        <div class="form-group">
                            @*<label asp-for="Deliver_File_Path" class="control-label" hidden></label>*@
                            <input asp-for="Deliver_File_Path" class="form-control" id="targetDeliverFilePath" value="0" hidden />
                            <span asp-validation-for="Deliver_File_Path" class="text-danger" hidden></span>
                        </div>
                        <div class="col-2"></div>
                        <div class="col-sm-4">
                            <input type="file" asp-for="File" class="btn btn-primary btn-lg" />
                        </div>
                        <div class="col-sm-2">
                            @*<label asp-for="Job_Title" class="control-label"></label>*@
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Publish_Date" class="form-control"  hidden />
                            <span asp-validation-for="Publish_Date" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4"></div>
                        @*<div class="col-sm-5">
                            <input type="file" asp-for="File" name="fileUploadinput" class="btn btn-primary btn-lg" />
                        </div>*@
                        <div class="col-sm-2"></div>
                        <div class="col-sm-3"><input type="submit" value="Deliver" class="btn btn-primary btn-lg" /></div>
                        <div class="col-sm-1"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-10"></div>
        <div class="col-sm-2">
            <button class="btn btn-sm btn-primary " type="button">
                <a class="nav-link text-light" asp-action="Index">Back to List</a>
            </button>
        </div>
    </div>
</div>



<style type="text/css">
    .likecontainer {
        padding: 25px;
        box-shadow: 0 2px 8px rgba(0,0,0, 0.1);
        border-radius: 30px;
        background-color: #ffffff;
    }
</style>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
