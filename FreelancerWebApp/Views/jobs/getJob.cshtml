@model FreelancerWebApp.Models.job

@{
    ViewData["Title"] = "Get Job";
}


<div class="container">
    <h3 class="text-center py-1">Get Job</h3>
    <div class="container py-3">
        <div class="customcontainer bg-light">
            <div class="row gx-5">
                <div class="col-lg-5 mb-5 mb-lg-0 my-3">
@*                    <svg class="bd-placeholder-img card-img-top" width="100%" height="450px" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#005800" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
*@                   <img style="width:500px; height:auto;" src="/JobPhotos/@(Model.Job_Photo_Path)" />

                </div>
                <div class="col-lg-7 mb-5 mb-lg-0 my-3">
                    @*<div class="badge bg-primary btn-outline-light rounded mb-lg-1">Get Job</div>*@
                    <div class="row gx-5">
                        <div class="col-lg-12 mb-5 mb-lg-0 my-3">
                            <h4>@Html.DisplayFor(model => model.Job_Title) ~ @Html.DisplayFor(model => model.Job_Category)</h4>
                        </div>
                    </div>
                    <div class="my-3">
                        <p>@Html.DisplayFor(model => model.Job_Description)</p>
                    </div>

                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="px-2 my-2">
                        <div>
                            <p>Complete in <strong class="text-danger">@Html.DisplayFor(model => model.Day)</strong> days</p>
                        </div>

                    </div>

                    <div class="px-2 my-2">
                        <p class="">
                            Award will be <strong class="text-success">@Html.DisplayFor(model => model.Offered_Price)$</strong>
                        </p>
                    </div>
                    <br />
                    <br />
                    <h6 class="text-muted">
                        Created at
                        <strong>
                            @if (Model.Publish_Date.ToString().Length < 20)
                            {
                                @Model.Publish_Date.ToString().Substring(0,10)
                                ;
                            }
                            else
                            {
                                @Model.Publish_Date.ToString()
                                ;
                                <text>Failure</text>
                            }
                        </strong>
                    </h6>
                    <br />
                    <div class="row gx-5 my-5">
                        <div class="col-lg-5 mb-5 mb-lg-0 my-0">
                            <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
                                <div class="d-flex align-items-end justify-content-between">
                                    <div class="d-flex align-items-center">
                                        <img class="rounded-circle me-3" src="https://dummyimage.com/40x40/ced4da/6c757d" alt="..." />
                                        <div class="small">
                                            <div class="fw-bold">@Html.DisplayFor(model => model.Owner_ID)</div>
                                            @*<div class="text-muted">Limit: @Html.DisplayFor(model => model.Day) Day &middot; <span class="text-success">@Html.DisplayFor(model => model.Offered_Price)$</span></div>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 mb-5 mb-lg-0 my-0"></div>


                        <div class="col-lg-4 mb-5 mb-lg-0 my-0">
                            <div class="">
                                <form asp-action="getJob">
                                    <div class="row">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="Id" />
                                        <div class="form-group">
                                            @*<label asp-for="Job_Title" class="control-label"></label>*@
                                            <input asp-for="Job_Title" class="form-control" hidden />
                                            <span asp-validation-for="Job_Title" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            @*<label asp-for="Job_Category" class="control-label"></label>*@
                                            <input asp-for="Job_Category" class="form-control" hidden />
                                            <span asp-validation-for="Job_Category" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            @*<label asp-for="Job_Description" class="control-label"></label>*@
                                            <input asp-for="Job_Description" class="form-control" hidden />
                                            <span asp-validation-for="Job_Description" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            @*<label asp-for="Offered_Price" class="control-label"></label>*@
                                            <input asp-for="Offered_Price" class="form-control" hidden />
                                            <span asp-validation-for="Offered_Price" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            @*<label asp-for="Day" class="control-label"></label>*@
                                            <input asp-for="Day" class="form-control" hidden />
                                            <span asp-validation-for="Day" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            @*<label asp-for="Owner_ID" class="control-label"></label>*@
                                            <input asp-for="Owner_ID" class="form-control" hidden />
                                            <span asp-validation-for="Owner_ID" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            @*<label asp-for="Freelancer_ID" class="control-label"></label>*@
                                            <input asp-for="Freelancer_ID" class="form-control" value="@ViewBag.userid" hidden />
                                            <span asp-validation-for="Freelancer_ID" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Deliver_File_Path" class="control-label" hidden></label>
                                            <input asp-for="Deliver_File_Path" class="form-control" id="targetDeliverFilePath" value="0" hidden />
                                            <span asp-validation-for="Deliver_File_Path" class="text-danger"></span>
                                        </div>
                                        @if (Model.Owner_ID != ViewBag.userid)
                                        {
                                            <div class="col-sm-11"></div>
                                            <div class="col-sm-1">
                                                <input type="submit" value="Get Job" class="btn btn-success" />
                                            </div>
                                        }
                                        else
                                        {
                                            <!--
                                            <div class="col-sm-8"></div>
                                            <div class="col-sm-4">

                                            </div>
                                            -->
                                            <p class="text-danger">You can't get your own job.</p>
                                        }

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>

<div class="container">
    <div class="row my-5">
        <div class="col-sm-10"></div>
        <div class="col-sm-2">
            <button class="btn btn-outline-dark btn-success" type="button"><a class="text-white" asp-action="Index">Back to List</a></button>
        </div>
    </div>
</div>


<style type="text/css">
    .customcontainer {
        padding: 25px;
        box-shadow: 0 2px 8px rgba(0,0,0, 0.1);
        border-radius: 30px;
        background-color: #ffffff;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
